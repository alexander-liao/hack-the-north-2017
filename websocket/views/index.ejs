<% include head %>

<body>
<div class="container">
    <!-- Left side of the Page -->
    <div class="col-xs-12" id="chatbox">

    </div>
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Speed" autofocus>
        <span class="input-group-btn"><button class="btn btn-default" type="button">Start</button></span>
    </div>
</div>
<hr>

<div id="controls">
    <div><a class="play" onclick="play();">play</a></div>
    <div id="tempoBox">Tempo: <span id="showTempo">120</span>BPM <input id="tempo" type="range" min="30.0" max="160.0"
                                                                        step="1" value="120"
                                                                        style="height: 20px; width: 200px"
                                                                        onInput="tempo = event.target.value; document.getElementById('showTempo').innerText=tempo;">
    </div>
    <div>Resolution:<select onchange="noteResolution = this.selectedIndex;">
            <option>16th notes
            <option>8th notes
            <option>Quarter notes
        </select></div>
</div>


<!--main js-->
<script src="js/main.js"></script>
</body>